{% extends 'base.html.twig' %}

{% block title %}Saravah - Modifier une presta{% endblock %}

{% block body %}
    <div class="container mt-4">

        <a href="{{ path('prestation.index') }}" class="btn">Liste des prestas</a>

        <h1 class="mt-4">Modification de la presta</h1>

        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.title) }}      
            {{ form_widget(form.title) }}
            <div class="form-error">{{ form_errors(form.title) }}</div>
        </div>

        {# <div class="form-group">
            {{ form_row(form.imageFile) }}     
        </div> #}

        <div class="form-group">
            {{ form_label(form.location) }}      
            {{ form_widget(form.location) }}
            <div class="form-error">{{ form_errors(form.location) }}</div>
        </div>
        <div>
            {{ form_label(form.date)}}
            {{ form_widget(form.date) }}
            <div class="alert red-alert">{{ form_errors(form.date) }}
        </div>
        <div>
            {{ form_label(form.meetingLocation)}}
            {{ form_widget(form.meetingLocation) }}
            <div class="alert red-alert">{{ form_errors(form.meetingLocation) }}
        </div>
        <div>
            {{ form_label(form.meetingHour)}}
            {{ form_widget(form.meetingHour) }}
            <div class="alert red-alert">{{ form_errors(form.meetingHour) }}
        </div>
        <div>
            {{ form_label(form.information)}}
            {{ form_widget(form.information) }}
            <div class="alert red-alert">{{ form_errors(form.information) }}
        </div>
        <div>
            {{ form_label(form.playingTime)}}
            {{ form_widget(form.playingTime) }}
            <div class="alert red-alert">{{ form_errors(form.playingTime) }}
        </div>
        <div>
            {{ form_label(form.nbPerformance)}}
            {{ form_widget(form.nbPerformance) }}
            <div class="alert red-alert">{{ form_errors(form.nbPerformance) }}
        </div>

        <div class="block">
            {{ form_row(form.submit, { 'label': 'Modifier la presta'}) }}
        </div>    

        

        {# <div class="form-group">
            {{ form_row(form.ingredients) }}      
        </div> #}

           
        {{ form_end(form) }}
        
       
    </div>


{% endblock %}