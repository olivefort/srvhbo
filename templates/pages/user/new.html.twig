{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<section class="" id="">
    <div class="p-6 m-10">
        <a href="{{ path('membre.index')}}" class="">Liste des membres</a>
        <h1>Inscription</h1>

        {{ form_start(form) }}

        <div>
            {{form_label(form.name)}}
            {{form_widget(form.name)}}
            <div class="">{{ form_errors(form.name)}}</div>
        </div>
        <div>
            {{form_label(form.firstName)}}
            {{form_widget(form.firstName)}}
            <div class="">{{ form_errors(form.firstName)}}</div>
        </div>
        <div>
            {{form_label(form.pseudo)}}
            {{form_widget(form.pseudo)}}
            <div class="">{{ form_errors(form.pseudo)}}</div>
        </div>
        <div>
            {{form_label(form.email)}}
            {{form_widget(form.email)}}
            <div class="">{{ form_errors(form.email)}}</div>
        </div>
        <div>
            {{form_label(form.plainPassword)}}
            {{form_widget(form.plainPassword)}}
            <div class="">{{ form_errors(form.plainPassword)}}</div>
        </div>
        <div>
            {{form_label(form.birthday)}}
            {{form_widget(form.birthday)}}
            <div class="">{{ form_errors(form.birthday)}}</div>
        </div>
        <div>
            {{form_label(form.address)}}
            {{form_widget(form.address)}}
            <div class="">{{ form_errors(form.address)}}</div>
        </div>
        <div>
            {{form_label(form.phone)}}
            {{form_widget(form.phone)}}
            <div class="">{{ form_errors(form.phone)}}</div>
        </div>
        <div class="form-group mt-4">
            {{ form_widget(form.car) }}
            {{ form_label(form.car) }}
        </div>
        <div class="form-group">
            {{ form_row(form.submit, { 'label': 'Creer le membre'}) }}
        </div>       


        {{ form_end(form) }}
    </div>
</section>



{% endblock %}